<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.AfterYou" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/app_theme_color</item>
    </style>

    <style name="BrownTextPhotoAlbum" parent="@android:style/TextAppearance">
        <item name="android:textColor">#653c18</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberTextPhotoAlbum" parent="@android:style/TextAppearance">
        <item name="android:textColor">#6caddf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginPageText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#086299</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginPageEditText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#216bb3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textColorHint">#6caddf</item>
    </style>

    <style name="SignUpPageText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#6caddf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>