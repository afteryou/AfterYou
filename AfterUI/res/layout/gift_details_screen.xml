<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gift_full_img" >

    <Button
        android:id="@+id/gift_details_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_gift_states"
        android:gravity="center"
        android:text="@string/cancelTxt"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/gift_details_done_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_gift_states"
        android:gravity="center"
        android:text="@string/doneTxt"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:text="November 17, 2013"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <View
        android:id="@+id/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_above="@id/date_txt"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/number_of_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/line_bg"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:text="5,000 points"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/number_of_points"
        android:layout_marginLeft="20dp"
        android:paddingBottom="1dp"
        android:text="chocolates"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/send_gift_pop_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/gift_transparent_screen"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/send_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/gift_icon"
            android:gravity="center"
            android:text="@string/send_gift"
            android:textColor="#7dbbe4"
            android:textSize="17sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="0.50dp"
            android:background="#A9ABAE" />

        <TextView
            android:id="@+id/send_message_with_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/msg_voting_btn"
            android:gravity="center"
            android:text="@string/send_message_with_gift"
            android:textColor="#7dbbe4"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buy_points_pop_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/gift_transparent_screen"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/not_enough_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/not_enough_points"
            android:textColor="#7dbbe4" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#A9ABAE" />

        <TextView
            android:id="@+id/buy_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/details_points"
            android:gravity="center"
            android:text="@string/buy_points"
            android:textColor="#7dbbe4" />
    </LinearLayout>

</RelativeLayout>