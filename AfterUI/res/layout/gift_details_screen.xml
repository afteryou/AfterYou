<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gift_full_img" >

    <Button
        android:id="@+id/gift_details_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_gift_states"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/cancelTxt" />

    <Button
        android:id="@+id/gift_details_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_gift_states"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/doneTxt" />

</RelativeLayout>