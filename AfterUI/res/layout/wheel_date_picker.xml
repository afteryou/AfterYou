    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <com.beacon.afterui.custom.view.wheel.WheelView
        android:id="@+id/day"
        android:layout_width="46dp"
        android:layout_height="wrap_content" />

    <com.beacon.afterui.custom.view.wheel.WheelView
        android:id="@+id/month"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

    <com.beacon.afterui.custom.view.wheel.WheelView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>