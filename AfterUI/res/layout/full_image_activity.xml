<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color" >

    <include
        android:id="@+id/header_image"
        layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/photo_album_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_image" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/take_photo_bar" />

        <TextView
            android:id="@+id/choose_from_library_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/choose_from_library_txt"
            android:textColor="@color/white_color" />

        <ImageButton
            android:id="@+id/cancel_btn_full_image_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cancel_bg" />

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:text="@string/cancelTxt"
            android:textColor="@color/white_color" />

        <ImageButton
            android:id="@+id/done_btn_full_image_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/done_bg" />

        <TextView
            android:id="@+id/done_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:paddingRight="8dp"
            android:text="@string/doneTxt"
            android:textColor="@color/white_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_album_layout"
        android:layout_margin="20dp"
        android:background="@drawable/image_preview_bg_white" >

        <ImageView
            android:id="@+id/photo_of_user_full_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/crop_bar_transparant_img" >

        <ImageButton
            android:id="@+id/image_rotate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/rotate_btn" />

        <ImageButton
            android:id="@+id/image_effect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/image_rotate_btn"
            android:background="@drawable/effect_btn" />

        <ImageButton
            android:id="@+id/image_red_eye_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/image_effect_btn"
            android:background="@drawable/red_eye_btn" />

        <ImageButton
            android:id="@+id/image_crop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_red_eye_btn"
            android:background="@drawable/crop_btn" />
    </RelativeLayout>

</RelativeLayout>