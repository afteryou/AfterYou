<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color" >

    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lay_margine"
        android:text="@string/cancelTxt"
        android:textColor="@color/font_blue_color"
        android:textSize="18sp" />

    <View
        android:id="@+id/cancel_btn_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/cancel_btn"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/setting_txt"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/cancel_btn_divider"
        android:background="@color/setting_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lay_margine"
        android:textColor="@color/font_blue_color"
        android:textSize="19sp" />

    <View
        android:id="@+id/setting_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/setting_txt"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/activity_log_lay"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_below="@id/setting_divider"
        android:gravity="center" >

        <TextView
            android:id="@+id/activity_log_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/activity_log_txt"
            android:textColor="@color/font_blue_color"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/activity_log_sub_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_log_txt"
            android:layout_centerHorizontal="true"
            android:paddingTop="1dp"
            android:text="@string/activity_log_sub_txt"
            android:textColor="@color/font_blue_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/activity_log_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/activity_log_lay"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/filter_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_log_divider" >

        <TextView
            android:id="@+id/filter_txt"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/lay_margine"
            android:text="@string/filter_txt"
            android:textColor="@color/font_blue_color"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right_direction_img" />
    </RelativeLayout>

    <View
        android:id="@+id/filter_lay_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/filter_lay"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/dummy_row"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/filter_lay_divider"
        android:background="@color/setting_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lay_margine"
        android:textColor="@color/font_blue_color"
        android:textSize="19sp" />

    <View
        android:id="@+id/dummy_lay_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/dummy_row"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/dummy_lay_divider"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lay_margine"
        android:textColor="@color/name_color"
        android:textSize="19sp" />

    <View
        android:id="@+id/date_lay_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/date_txt"
        android:background="@color/divider_color" />

    <ListView
        android:id="@+id/review_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_lay_divider"
        android:divider="@color/divider_color"
        android:dividerHeight="0.50dp"
        android:listSelector="@drawable/listview_selector" >
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/review_list"
        android:background="@color/divider_color" />

</RelativeLayout>