<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/photo_preview_img_bar"
        layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/photo_preview_img_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/preview_back" >

                <ImageView
                    android:id="@+id/sampleimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/male_image" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5" >

                <ImageButton
                    android:id="@+id/take_photo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn"
                    android:src="@drawable/takephoto_txt" />

                <ImageButton
                    android:id="@+id/liabrary_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/take_photo_btn"
                    android:background="@drawable/login_btn"
                    android:src="@drawable/choosefrom_liabrary_txt" />

                <ImageButton
                    android:id="@+id/facebook_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/liabrary_btn"
                    android:background="@drawable/login_btn"
                    android:src="@drawable/choosefrom_facebook_txt" />

                <ImageButton
                    android:id="@+id/edit_crop_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/facebook_btn"
                    android:background="@drawable/login_btn"
                    android:src="@drawable/edit_crop" />

                <ImageButton
                    android:id="@+id/submitbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_crop_btn"
                    android:background="@drawable/sign_up_btn"
                    android:src="@drawable/submit_txt" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>