<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/voting_done_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/voting_search_lay"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="@string/doneTxt"
        android:textColor="@color/font_blue_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/voting_done_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@+id/voting_done_btn"
        android:layout_marginTop="1dp"
        android:background="@drawable/divider_listview" />

    <LinearLayout
        android:id="@+id/voting_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voting_done_divider"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/num_friends_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/connect_btn" />

            <TextView
                android:id="@+id/connects_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="@string/connects_btn"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_connects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="(25)"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/num_referals_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/referr_btn" />

            <TextView
                android:id="@+id/referrals_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="@string/referrals_txt"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_referrals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="(25)"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/num_vote_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/vote_btn" />

            <TextView
                android:id="@+id/vote_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="@string/vote_btn"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="(25)"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/num_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/msg_voting_btn" />

            <TextView
                android:id="@+id/messages_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="@string/messages_txt"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dip"
                android:text="(25)"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/voting_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@+id/voting_lay"
        android:background="@drawable/divider_listview" />

    <ListView
        android:id="@+id/notification_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voting_divider"
        android:divider="@drawable/divider_listview"
        android:dividerHeight="0.50dp"
        android:listSelector="@drawable/listview_selector" >
    </ListView>

    <TextView
        android:id="@+id/decline_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@+id/voting_divider"
        android:layout_marginTop="15dp"
        android:background="@drawable/divider_listview"
        android:visibility="gone" />

</RelativeLayout>