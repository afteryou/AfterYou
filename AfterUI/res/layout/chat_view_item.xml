<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/chat_person_placeholder"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/user_img"
        android:text="Sachin Mane"
        android:textColor="@color/font_listview_blue" />

    <ImageView
        android:id="@+id/user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/user_status_symbol" />

    <TextView
        android:id="@+id/user_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/user_status"
        android:paddingRight="5dp"
        android:text="45m"
        android:textColor="@color/time_color"
        android:textSize="12sp" />

</RelativeLayout>