<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	android:gravity="center"
	android:id="@+id/parentPanel"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	style="@style/CustomAlertDialogLinearLayout"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:id="@+id/topPanel"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="vertical">
		<LinearLayout
			android:gravity="center"
			android:id="@+id/title_template"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="vertical"
			android:paddingBottom="12dp"
			android:paddingLeft="14dp"
			android:paddingRight="14dp"
			android:paddingTop="12dp"
			style="@style/CustomLinearLayout">
			<com.beacon.afterui.utils.customviews.CustomDialogTitle
				android:gravity="center"
				android:id="@+id/alertTitle"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:textSize="16dp"
				android:textStyle="bold"
				style="@style/CustomDialogTitle"/>
			<ImageView
				android:id="@+id/icon"
				android:layout_gravity="center_horizontal"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:visibility="gone"/>
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/titleDivider"
		android:layout_height="1dip"
		android:layout_width="fill_parent"
		android:visibility="gone"
		android:scaleType="fitXY"
		style="@style/DarkDividerImageView"/>
	<!--   If the client uses a customTitle, it will be added here.   -->
	<LinearLayout
		android:id="@+id/contentPanel"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/scrollView"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_width="fill_parent">
			<LinearLayout
				android:id="@+id/linearLayout4"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:paddingBottom="16dp"
				android:paddingLeft="@dimen/dialog_content_margin"
				android:paddingRight="@dimen/dialog_content_margin"
				android:paddingTop="16dp">
				<TextView
					android:gravity="left"
					android:id="@+id/message"
					android:layout_gravity="center_vertical|left"
					android:layout_height="wrap_content"
					android:layout_margin="7dip"
					android:layout_width="match_parent"
					android:textSize="16dip"
					style="@style/TextViewMasterInfo"/>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
	<FrameLayout
		android:id="@+id/customPanel"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_width="fill_parent">
		<FrameLayout
			android:id="@+id/custom"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"/>
	</FrameLayout>
	<LinearLayout
		android:id="@+id/buttonPanel"
		android:isScrollContainer="false"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/imageView1"
			android:layout_height="1px"
			android:layout_width="fill_parent"
			style="@style/NotifyImageView"/>
		<LinearLayout
			android:id="@+id/linearLayout3"
			android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<LinearLayout
				android:id="@+id/leftSpacer"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:layout_width="0dip"
				android:orientation="horizontal"
				android:visibility="gone"/>
			<Button
				android:id="@+id/button1"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:padding="16dp"
				android:textSize="@dimen/font_size_content_fnt_bold"
				android:textStyle="normal"
				android:textColor="@color/blue_sky"
				android:background="@drawable/button_menu" />
			<ImageView
				android:id="@+id/imageView2"
				android:layout_height="fill_parent"
				android:layout_width="1px"
				style="@style/NotifyImageView"/>
			<Button
				android:id="@+id/button2"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:padding="16dp"
				android:textSize="@dimen/font_size_content_fnt_bold"
				android:textStyle="normal"
				android:textColor="@color/blue_sky"
				android:background="@drawable/button_menu" />
			<ImageView
				android:id="@+id/imageView2"
				android:layout_height="fill_parent"
				android:layout_width="1px"
				style="@style/NotifyImageView"/>
			<Button
				android:id="@+id/button3"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:padding="16dp"
				android:textSize="@dimen/font_size_content_fnt_bold"
				android:textStyle="normal"
				android:textColor="@color/blue_sky"
				android:background="@drawable/button_menu" />
			<LinearLayout
				android:id="@+id/rightSpacer"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:layout_width="0dip"
				android:orientation="horizontal"
				android:visibility="gone"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
