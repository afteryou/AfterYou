                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/diet_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/diet_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/smoke_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/diet_lay" >

                    <TextView
                        android:id="@+id/smoke_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/smoke_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/smoke_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/drink_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/smoke_lay" >

                    <TextView
                        android:id="@+id/drink_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/drink_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/drink_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/education_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/drink_lay" >

                    <TextView
                        android:id="@+id/education_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/education_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/IDS_Education_Label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/self_salary_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_id" >

                    <TextView
                        android:id="@+id/salary_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/salary_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/IDS_Salary_Label" />
                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/ideal_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/self_info"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="@string/your_ideal_txt"
                android:textColor="@color/profile_setup_blue_color"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ideal_match"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <FrameLayout
                    android:id="@+id/match_brith_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/match_birthday_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_date_of_birth_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/IDS_AgeRange_Label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/match_religion_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_brith_lay" >

                    <TextView
                        android:id="@+id/match_religion_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:hint="@string/IDS_Mandatory_Field"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_religion_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/religion_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/match_relation_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_religion_lay" >

                    <TextView
                        android:id="@+id/match_relation_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:hint="@string/IDS_Mandatory_Field"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_relation_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/relation_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/match_havechild_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_relation_lay" >

                    <TextView
                        android:id="@+id/match_havechild_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:hint="@string/IDS_Mandatory_Field"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_havechild_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/havechild_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/match_wantchild_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_havechild_lay" >

                    <TextView
                        android:id="@+id/match_wantchild_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_wantchild_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/wantchild_label" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/match_languages_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_wantchild_lay" >

                    <TextView
                        android:id="@+id/match_languages_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/languages_label" />

                    <TextView
                        android:id="@+id/match_languages_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/match_languages_label_txt"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/match_height_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_languages_lay" >

                    <TextView
                        android:id="@+id/match_height_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_height_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/height_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/match_bodyType_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_height_lay" >

                    <TextView
                        android:id="@+id/match_bodyType_edit_text"
                        style="@style/LoginPageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sign_up_btn"
                        android:gravity="right|center"
                        android:paddingRight="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/match_bodyType_label_txt"
                        style="@style/ProfilePageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/bodyType_label" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/match_comm_lay"
                    android:layout_width="match_parent"
