<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color" >

    <RelativeLayout
        android:id="@+id/search_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bg" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/search_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/search_txt_bg"
            android:hint="Search"
            android:paddingLeft="24dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/white_color"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/search_logo" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/user_image" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/user_image"
        android:text="Micheal Zinberg"
        android:textColor="@color/font_listview_blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dash_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:layout_marginTop="10dp"
        android:background="@drawable/dashboard_bg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="DASHBOARD"
        android:textColor="@color/font_listview_blue"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/sliding_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dash_board"
        android:divider="@drawable/divider_listview"
        android:dividerHeight="1dp" >
    </ListView>

</RelativeLayout>