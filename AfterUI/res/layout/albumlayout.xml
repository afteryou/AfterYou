<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/photo_of_user"
        android:scaleType="fitXY"
        android:src="@drawable/divider_img" >
    </ImageView>

    <ImageView
        android:id="@+id/photo_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/album_name"
        style="@style/BrownTextPhotoAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/photo_of_user"
        android:paddingLeft="4dp"
        android:text="@string/camera_roll_txt"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/number_txt"
        style="@style/NumberTextPhotoAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/album_name"
        android:paddingLeft="6dp"
        android:text="@string/number_of_photos_txt"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/right_direction_img" />

</RelativeLayout>