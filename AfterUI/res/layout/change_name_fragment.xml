<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lay_margine"
        android:text="@string/cancelTxt"
        android:textColor="@color/font_blue_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/done_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/lay_margine"
        android:text="@string/doneTxt"
        android:textColor="@color/font_blue_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cancel_btn_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/cancel_btn"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/setting_txt"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/cancel_btn_divider"
        android:background="@color/setting_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lay_margine"
        android:text="@string/change_name_txt"
        android:textColor="@color/font_blue_color"
        android:textSize="19sp" />

    <View
        android:id="@+id/setting_divider"
        android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:layout_below="@id/setting_txt"
        android:background="@color/divider_color" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_divider" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/change_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5.0sp"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/lay_margine"
                android:paddingRight="@dimen/lay_margine"
                android:paddingTop="15dp"
                android:text="@string/change_name_info"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />

            <View
                android:id="@+id/change_name_setting_divider"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_below="@id/change_name_info"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/first_name_lay"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/change_name_setting_divider"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_margine"
                    android:text="@string/first_name_text_hint"
                    android:textColor="@color/font_blue_color"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/first_name_sub_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_name"
                    android:layout_marginLeft="@dimen/lay_margine"
                    android:layout_marginRight="@dimen/lay_margine"
                    android:background="#00000000"
                    android:inputType="text"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/time_color"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/first_name_setting_divider"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_below="@id/first_name_lay"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/last_name_lay"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/first_name_setting_divider"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_margine"
                    android:text="@string/last_name_text_hint"
                    android:textColor="@color/font_blue_color"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/last_name_sub_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_name"
                    android:layout_marginLeft="@dimen/lay_margine"
                    android:layout_marginRight="@dimen/lay_margine"
                    android:background="#00000000"
                    android:inputType="text"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/time_color"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/last_name_setting_divider"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_below="@id/last_name_lay"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/save_msg_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_name_setting_divider"
                android:layout_marginTop="17dp"
                android:paddingLeft="@dimen/lay_margine"
                android:paddingRight="@dimen/lay_margine"
                android:text="@string/save_txt"
                android:textColor="@color/font_blue_color" />

            <TextView
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/save_msg_txt"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingRight="@dimen/lay_margine"
                android:text="@string/save_btn"
                android:textColor="@color/font_blue_color"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/password_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/save_msg_txt"
                android:layout_marginLeft="@dimen/lay_margine"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/save_btn"
                android:background="@drawable/profile_name_edittext_box"
                android:hint="@string/type_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/font_blue_color"
                android:textColorHint="@color/time_color"
                android:textCursorDrawable="@null"
                android:textSize="19sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>