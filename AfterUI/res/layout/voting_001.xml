<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/hot_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_btn"
        android:layout_centerHorizontal="true"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/hot_img_btn"
        android:text="@string/hot_txt"
        android:textColor="@color/font_dark_blue"
        android:textSize="18sp" />

    <View
        android:id="@+id/line_img"
        android:layout_width="310dp"
        android:layout_height="0.50dp"
        android:layout_below="@id/hot_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/font_dark_blue" />

    <TextView
        android:id="@+id/vote_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_img"
        android:layout_centerHorizontal="true"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/vote_btn"
        android:text="@string/vote_txt"
        android:textColor="@color/font_dark_blue"
        android:textSize="18sp" />

</RelativeLayout>