<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/referal_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/referal_user_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@drawable/referal_sample_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/referal_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Supriya Aiman"
                android:textColor="@color/brown_background" />

            <TextView
                android:id="@+id/referral_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/made_referrel_txt"
                android:textColor="@color/font_dark_blue" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/user_name_view_votes"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="Sachin Mane"
        android:textColor="@color/name_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/view_votes_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/user_img_view_votes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:src="@drawable/sample_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/view_votes_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/view_votes_txt"
                android:textColor="@color/font_blue_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/voting_in_progress_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/voting_in_progress_txt"
                android:textColor="@color/font_blue_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="24H : 00M : 00S"
                android:textColor="@color/font_blue_color"
                android:textSize="31sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>