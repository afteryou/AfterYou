<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color" >

    <include
        android:id="@+id/header_image"
        layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/photo_album_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_image" >

        <ImageButton
            android:id="@+id/take_photo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/take_photo_bar"
            android:src="@drawable/choose_from_liabrary_white_txt" />

        <ImageButton
            android:id="@+id/cancel_btn_photo_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cancel_btn"
            android:src="@drawable/cancel_txt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/camera_roll_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/photo_album_layout"
        android:layout_margin="10dp"
         >

        <GridView
            android:id="@+id/photo_gallary_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="90dp"
            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:background="@drawable/image_preview_bg_white"
            android:paddingLeft="7dp"
            android:paddingRight="6dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
             >
        </GridView>
    </RelativeLayout>

</RelativeLayout>