<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/comment_user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/lay_margine"
        android:src="@drawable/sample_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supriya_aiman"
            android:textColor="@color/name_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/comment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:text="@string/sample_comment_txt"
            android:textColor="@color/font_blue_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comment_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="August 30,2013"
            android:textColor="@color/time_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>