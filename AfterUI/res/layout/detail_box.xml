<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_background_holo_light"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/brown_background"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detail_age"
            style="@style/LoginPageEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/detail_name"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingTop="15dip" />

        <RelativeLayout
            android:id="@+id/detail_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/detail_album_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/album_art" />

            <TextView
                android:id="@+id/detail_album_count"
                style="@style/LoginPageEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/detail_album_art"
                android:gravity="center"
                android:paddingLeft="5dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/detail_status"
            style="@style/LoginPageEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingTop="5dip" />

        <RelativeLayout
            android:id="@+id/detail_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_status"
            android:paddingLeft="10dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/detail_lastlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/detail_lastlogin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/detail_lastlogin"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:textColor="@color/black" />
        </RelativeLayout>

        <com.beacon.afterui.imageUtils.ScaleImageView
            android:id="@+id/detail_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_login"
            android:paddingTop="5dip"
            android:scaleType="centerCrop"
            android:src="@null" />

        <RelativeLayout
            android:id="@+id/detail_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_pic"
            android:paddingLeft="10dip"
            android:paddingTop="5dip" >

            <ImageView
                android:id="@+id/detail_like_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/like_art" />

            <TextView
                android:id="@+id/detail_like_text"
                style="@style/LoginPageEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/detail_like_art"
                android:gravity="center"
                android:paddingLeft="5dip" />

            <ImageView
                android:id="@+id/detail_comment_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/detail_like_text"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:paddingTop="2dip"
                android:src="@drawable/comment_bubble" />

            <TextView
                android:id="@+id/detail_comment_count"
                style="@style/LoginPageEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/detail_comment_art"
                android:gravity="center"
                android:paddingLeft="5dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_comunicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_social"
            android:paddingLeft="10dip"
            android:paddingTop="15dip" >

            <ImageView
                android:id="@+id/detail_gift_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="2dip"
                android:src="@drawable/gift" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dip" >

                <ImageView
                    android:id="@+id/detail_chat_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dip"
                    android:paddingTop="2dip"
                    android:src="@drawable/chat_req" />

                <TextView
                    android:id="@+id/detail_chat_req_text"
                    style="@style/LoginPageEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/detail_chat_req"
                    android:paddingTop="2dip"
                    android:text="@string/IDS_CHAT" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_divider_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_comunicate"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/detail_divider"
                style="@style/GrayDividerImageView"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:adjustViewBounds="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_comment_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_divider_lay"
            android:layout_centerInParent="true"
            android:paddingBottom="10dip"
            android:paddingTop="20dip"
            android:visibility="gone" >

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false"
                android:isScrollContainer="false" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_details_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_comment_list"
            android:layout_centerInParent="true"
            android:paddingBottom="10dip"
            android:paddingTop="20dip" >

            <Button
                android:id="@+id/detail_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/done_btn"
                android:gravity="center"
                android:text="@string/IDS_CLOSE"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_divider_lay2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_details_lay"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/detail_divider2"
                style="@style/GrayDividerImageView"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:adjustViewBounds="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_story_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_divider_lay2"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/my_story_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text="@string/IDS_MY_STORY"
                android:textColor="@color/brown_background" />

            <TextView
                android:id="@+id/my_story_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_story_label"
                android:text="Lots of things about myself sdsdfasduiashdlkasd asopdiapsd asdp aajsdp0as9ud9uawewpq ejqw qw"
                android:textColor="@color/blue_link" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_divider_lay3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_story_lay"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/detail_divider3"
                style="@style/GrayDividerImageView"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:adjustViewBounds="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_match_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_divider_lay3"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/my_match_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text="@string/IDS_MY_MATCH"
                android:textColor="@color/brown_background" />

            <TextView
                android:id="@+id/my_match_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_match_label"
                android:text="Lots of things about myself sdsdfasduiashdlkasd asopdiapsd asdp aajsdp0as9ud9uawewpq ejqw qw"
                android:textColor="@color/blue_link" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>

