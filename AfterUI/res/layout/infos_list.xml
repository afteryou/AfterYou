<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_background_holo_light"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/news_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:textSize="24sp"
        android:textColor="@color/brown_background" />

    <TextView
        android:id="@+id/news_age"
        style="@style/LoginPageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/news_name"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingTop="15dip" />

    <RelativeLayout
        android:id="@+id/news_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/news_album_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="2dip"
            android:src="@drawable/album_art" />

        <TextView
            android:id="@+id/news_album_count"
            style="@style/LoginPageEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/news_album_art"
            android:gravity="center"
            android:paddingLeft="5dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/news_status"
        style="@style/LoginPageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_name"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingTop="5dip" />

    <RelativeLayout
        android:id="@+id/news_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_status"
        android:paddingLeft="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/news_lastlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/news_lastlogin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/news_lastlogin"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:textColor="@color/black" />
    </RelativeLayout>

    <com.beacon.afterui.imageUtils.ScaleImageView
        android:id="@+id/news_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_login"
        android:paddingTop="5dip"
        android:scaleType="centerCrop"
        android:src="@null" />

    <RelativeLayout
        android:id="@+id/news_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_pic"
        android:paddingLeft="10dip"
        android:paddingTop="5dip" >

        <ImageView
            android:id="@+id/news_like_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="2dip"
            android:gravity="center"
            android:src="@drawable/like_art" />

        <TextView
            android:id="@+id/news_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/news_like_art"
            android:gravity="center"
            android:paddingLeft="5dip"
            style="@style/LoginPageEditText" />

        <ImageView
            android:id="@+id/news_comment_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="2dip"
            android:layout_toRightOf="@id/news_like_text"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:src="@drawable/comment_bubble" />

        <TextView
            android:id="@+id/news_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/news_comment_art"
            android:gravity="center"
            android:paddingLeft="5dip"
            style="@style/LoginPageEditText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/news_divider_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_social"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/news_divider"
            style="@style/GrayDividerImageView"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_divider_lay"
        android:layout_centerInParent="true"
        android:paddingBottom="10dip"
        android:paddingTop="20dip" >

        <Button
            android:id="@+id/news_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/details_button"
            android:gravity="center"
            android:text="@string/IDS_DETAILS"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>