<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/vote_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/vote_btn" />

    <TextView
        android:id="@+id/hot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote_confirm_btn"
        android:layout_centerHorizontal="true"
        android:paddingTop="2dp"
        android:text="@string/vote_confirm_txt"
        android:textColor="@color/font_dark_blue" />

    <ImageView
        android:id="@+id/line_img"
        android:layout_width="310dp"
        android:layout_height="0.50dp"
        android:layout_below="@id/hot_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/font_dark_blue" />

    <ImageView
        android:id="@+id/msg_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_img"
        android:layout_centerHorizontal="true"
        android:background="@drawable/msg_voting_btn" />

    <TextView
        android:id="@+id/vote_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_confirm_btn"
        android:layout_centerHorizontal="true"
        android:paddingTop="2dp"
        android:text="@string/vote_txt"
        android:textColor="@color/font_dark_blue" />

</RelativeLayout>