<?xml version="1.0" encoding="UTF-8"?>
<project name="BuildAppConfig">
    <target name="build_app_config_files">
        
        <echo message="*** build androidmanifest.xml ***"/>
        <propertyregex property="version_code" input="${product.version}${build.version}" regexp='\.' replace=""/>
        <copy file="AndroidManifest.txt" tofile="./AndroidManifest.xml" overwrite="true">
            <filterset>
                <filter token="VERSIONNAME" value="${product.version}.${build.version}" />
				<filter token="VERSIONCODE" value="${version_code}" />
            </filterset>
        </copy>
        
        
        <echo message="*** build AppBuildConfig.java ***"/>
        <copy file="./AppBuildConfig.txt" tofile="./src/com/navbuilder/app/hurricane/AppBuildConfig.java" overwrite="true">
            <filterset>
                <filter token="VERSION" value="${product.version}" />
				<filter token="SUBVERSION" value="${build.version}" />
				<filter token="DEBUG_MODE" value="${build.debug}" />
            </filterset>
        </copy>
    </target>
</project>